<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" stylesheets="@/css/mainstyle.css, @/css/comboboxstyle.css, @/css/tablestyle.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.adieser.conntest.views.UiController">
    <HBox alignment="CENTER_RIGHT" prefHeight="28.0" styleClass="tittlebar">
        <Button fx:id="minimizeButton">
            <HBox.margin>
                <Insets top="5.0" />
            </HBox.margin>
            <graphic>
                <ImageView fitHeight="18" fitWidth="18">
                    <Image url="@image/minimizebutton.png" />
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="maximizeRestoreButton">
            <HBox.margin>
                <Insets top="5.0" />
            </HBox.margin>
            <graphic>
                <ImageView fitHeight="18" fitWidth="18">
                    <Image url="@image/maximizeRestorebutton1.png" />
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="closeButton">
            <HBox.margin>
                <Insets left="5.0" right="5.0" top="5.0" />
            </HBox.margin>
            <graphic>
                <ImageView fitHeight="18" fitWidth="18">
                    <Image url="@image/closebutton.png" />
                </ImageView>
            </graphic>
        </Button>
    </HBox>
    <!-- FIRST DIVISION -->
    <GridPane alignment="TOP_CENTER" maxHeight="100.0" minHeight="85.0" prefHeight="90.0" styleClass="topbackground" VBox.vgrow="NEVER">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="355.0" minWidth="303.0" prefWidth="352.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="533.0" minWidth="481.0" prefWidth="484.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="SOMETIMES" />
        </rowConstraints>
        <padding>
            <Insets bottom="30.0" />
        </padding>
        <!-- TITLE -->
        <Label prefWidth="200.0" styleClass="title" text="ConnTest" GridPane.halignment="RIGHT" GridPane.valignment="CENTER">
            <GridPane.margin>
                <Insets right="60.0" />
            </GridPane.margin>
        </Label>

        <HBox prefWidth="500.0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.valignment="CENTER">
            <!-- START AND STOP BUTTONS -->
            <Button fx:id="startButton" alignment="CENTER" contentDisplay="CENTER" styleClass="mainbutton" text="Start analysis">
                <HBox.margin>
                    <Insets left="40.0" right="15.0" />
                </HBox.margin>
            </Button>
            <Button fx:id="stopButton" styleClass="mainbutton" text="Stop analysis">
                <HBox.margin>
                    <Insets right="10.0" />
                </HBox.margin>
            </Button>


            <!-- LOADER -->
            <ProgressIndicator fx:id="progressIndicator" maxHeight="45.0" maxWidth="45.0" styleClass="loader" visible="false" HBox.hgrow="NEVER">
                <HBox.margin>
                    <Insets top="2.0" />
                </HBox.margin>
            </ProgressIndicator>

        </HBox>
    </GridPane>

    <!-- SECOND DIVISION -->
    <GridPane alignment="TOP_CENTER" maxWidth="1000" prefHeight="650">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" />
            <ColumnConstraints hgrow="SOMETIMES" />
            <ColumnConstraints hgrow="SOMETIMES" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="NEVER" />
            <RowConstraints vgrow="NEVER" />
            <RowConstraints vgrow="NEVER" />
            <RowConstraints prefHeight="270" vgrow="ALWAYS" />
            <RowConstraints vgrow="NEVER" />
        </rowConstraints>
        <VBox.margin>
            <Insets bottom="25.0" left="15.0" right="15.0" top="15.0" />
        </VBox.margin>

        <!-- GP 0 0 -->
        <VBox prefHeight="72.0" prefWidth="269.0">
            <!-- TIME CHOICE BOX -->
            <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="190.0" styleClass="combo-box">
                <Label text="Refresh time: ">
                    <HBox.margin>
                        <Insets right="5.0" />
                    </HBox.margin>
                </Label>
                <ComboBox fx:id="timeChoiceBox" promptText="5" style="-fx-background-color: transparent;" HBox.hgrow="SOMETIMES" />
                <Label text="  s" />
            </HBox>

            <Label text="Filters: ">
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
            <VBox.margin>
               <Insets bottom="5.0" />
            </VBox.margin></Label>

            <!-- FILTERS -->
            <HBox prefHeight="100.0" prefWidth="200.0">
                <CheckBox fx:id="dayFilterBox" mnemonicParsing="false" text=" Current day only" />
                <CheckBox fx:id="tieRowsBox" mnemonicParsing="false" text=" Tie rows" />
            </HBox>
        </VBox>

        <!-- TABLES TITLES -->
        <Label fx:id="labelTable1" prefHeight="22.0" prefWidth="246.0" styleClass="tabletitle" text="Pings to Local" GridPane.columnIndex="0" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets bottom="5.0" left="10.0" right="5.0" top="5.0" />
            </GridPane.margin>
        </Label>
        <Label fx:id="labelTable2" prefHeight="22.0" prefWidth="246.0" styleClass="tabletitle" text="Pings to Isp" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="10.0" right="5.0" />
            </GridPane.margin>
        </Label>
        <Label fx:id="labelTable3" prefHeight="22.0" prefWidth="237.0" styleClass="tabletitle" text="Pings to the internet " GridPane.columnIndex="2" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="10.0" right="5.0" />
            </GridPane.margin>
        </Label>

        <!-- AVERAGE LOST  -->
        <Label fx:id="labelLostAvg1" prefHeight="20.0" prefWidth="194.0" text="Average lost pings:" GridPane.columnIndex="0" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets bottom="5.0" left="10.0" right="5.0" top="5.0" />
            </GridPane.margin>
        </Label>
        <Label fx:id="labelLostAvg2" prefHeight="20.0" prefWidth="194.0" text="Average lost pings:" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets left="10.0" right="5.0" />
            </GridPane.margin>
        </Label>
        <Label fx:id="labelLostAvg3" prefHeight="20.0" prefWidth="194.0" text="Average lost pings:" GridPane.columnIndex="2" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets left="10.0" right="5.0" />
            </GridPane.margin>
        </Label>

        <!-- TABLES  -->
        <TableView fx:id="localTableView" focusTraversable="false" styleClass="table" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.vgrow="SOMETIMES">
            <columns>
                <TableColumn fx:id="dateLocalColumn" minWidth="120" text="Date" />
                <TableColumn fx:id="pingLocalColumn" minWidth="70" text="Ping Time (ms)" />
            </columns>
            <GridPane.margin>
                <Insets left="10.0" right="10.0" />
            </GridPane.margin>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <placeholder>
                <Label text="No data available" />
            </placeholder>
        </TableView>

        <TableView fx:id="ispTableView" focusTraversable="false" styleClass="table" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <columns>
                <TableColumn fx:id="dateIspColumn" minWidth="120" text="Date" />
                <TableColumn fx:id="pingIspColumn" minWidth="70" text="Ping Time (ms)" />
            </columns>
            <GridPane.margin>
                <Insets left="10.0" right="10.0" />
            </GridPane.margin>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <placeholder>
                <Label text="No data available" />
            </placeholder>
        </TableView>

        <TableView fx:id="cloudTableView" focusTraversable="false" styleClass="table" GridPane.columnIndex="2" GridPane.rowIndex="3">
            <columns>
                <TableColumn fx:id="dateCloudColumn" editable="false" minWidth="120" text="Date" />
                <TableColumn fx:id="pingCloudColumn" editable="false" minWidth="70" text="Ping Time (ms)" />
            </columns>
            <GridPane.margin>
                <Insets left="10.0" right="10.0" />
            </GridPane.margin>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <placeholder>
                <Label text="No data available" />
            </placeholder>
        </TableView>

        <!-- SAVES BUTTONS -->
        <Button fx:id="saveLocalButton" styleClass="savebutton" text="Save" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="4">
            <GridPane.margin>
                <Insets right="5.0" top="15.0" />
            </GridPane.margin>
        </Button>
        <Button fx:id="saveIspButton" styleClass="savebutton" text="Save" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="4">
            <GridPane.margin>
                <Insets right="5.0" top="15.0" />
            </GridPane.margin>
        </Button>
        <Button fx:id="saveCloudButton" styleClass="savebutton" text="Save" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="4">
            <GridPane.margin>
                <Insets right="5.0" top="15.0" />
            </GridPane.margin>
        </Button>
    </GridPane>

</VBox>
