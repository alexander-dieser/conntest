<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" maxHeight="150.0" maxWidth="300.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="170.0" prefWidth="300.0" styleClass="root_confirmmodal" stylesheets="@/css/mainstyle.css, @/css/confirmclearlogdialog.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.adieser.conntest.views.ModalController">
    <HBox alignment="CENTER_RIGHT" prefHeight="20.0" styleClass="tittlebar">
        <Button fx:id="closeButton" onAction="#handleClose">
            <HBox.margin>
                <Insets right="5.0" />
            </HBox.margin>
            <graphic>
                <ImageView fitHeight="15" fitWidth="15">
                    <Image url="@../image/closebutton.png" />
                </ImageView>
            </graphic>
        </Button>
    </HBox>
    <VBox style="-fx-alignment: TOP_CENTER;">
        <Label style="-fx-font-size: 14px;" text="All the unsaved data will be lost." wrapText="true" />
        <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Continue?" />
        <Label text=" " />
        <HBox alignment="CENTER" spacing="20">
            <Button onAction="#handleAction" text="Yes" />
            <Button onAction="#handleClose" text="No" />
        </HBox>

        <padding>
            <Insets bottom="15" left="15" right="15" top="15" />
        </padding>
    </VBox>

</VBox>
